# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# MongoDB connection string - update with your MongoDB URI
MONGO_URI=mongodb://localhost:27017/inventory_saas
# For replica set (optional): mongodb://localhost:27017/inventory_saas?replSet=rs0

# JWT Configuration
# Generate a secure random secret for production (use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_here_replace_with_random_string
JWT_EXPIRY=1h

# Email Configuration (Gmail SMTP)
# IMPORTANT: Use Gmail App Password, not your regular password!
# Steps to get App Password:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Select "Mail" and your device, then generate
# 4. Copy the 16-character password and paste it below
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here

# Company Information (used in emails)
COMPANY_NAME=Your Company Name
CONTACT_EMAIL=support@yourcompany.com
CONTACT_PHONE=+1-234-567-8900
SYSTEM_URL=http://localhost:3000

# Payment Instructions (used in overdue reminder emails)
PAYMENT_INSTRUCTIONS=Please contact us to arrange payment or visit our website to pay online.

# Email Scheduler Configuration
# Cron format: minute hour day month weekday
# Examples:
#   0 9 * * * = Daily at 9:00 AM
#   0 9 * * 1 = Every Monday at 9:00 AM
#   0 9 1,15 * * = 1st and 15th of each month at 9:00 AM
EMAIL_SCHEDULE=0 9 * * *
TIMEZONE=America/New_York
